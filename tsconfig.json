{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["dom", "es2019"],
    "strict": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
